<script>
    $(document).ready(function () {
        $('#search-box').on('input', function () {
            var keyword = $(this).val();
            if (keyword.length > 0) {
                $('#clear-search-box').show();
            } else {
                $('#clear-search-box').hide();
            }

            if (keyword.length > 2) {
                $.ajax({
                    url: '/Product/SearchSuggestions',
                    method: 'GET',
                    data: { keyword: keyword },
                    success: function (data) {
                        $('#suggestions').empty();
                        data.forEach(function (product) {
                            $('#suggestions').append(
                                `<a href="/Product/Details/${product.id}" class="suggestion-item">

                                                    <img src="${product.imageUrl}" alt="${product.productName}">
                                                    <div>
                                                        <span>${product.productName}</span>
                                                        <span class="price">${product.price}</span>
                                                        <span class="old-price">${product.oldPrice}</span>
                                                    </div>
                                                </a>`
                            );
                        });
                    }
                });
            } else {
                $('#suggestions').empty();
            }
        });

        $('#clear-search-box').on('click', function () {
            $('#search-box').val('');
            $('#clear-search-box').hide();
            $('#suggestions').empty();
        });

        // Sự kiện click vào document
        $(document).on('click', function (event) {
            // Kiểm tra nếu click ra ngoài vùng tìm kiếm và danh sách gợi ý
            if (!$(event.target).closest('.custom-search-input').length) {
                $('#search-box').val(''); // Xóa nội dung trong ô tìm kiếm
                $('#clear-search-box').hide(); // Ẩn nút xóa
                $('#suggestions').empty(); // Ẩn danh sách gợi ý
            }
        });

        // Ngăn chặn sự kiện click trên ô tìm kiếm và danh sách gợi ý
        $('.custom-search-input').on('click', function (event) {
            event.stopPropagation();
        });
    });
</script>

