@model IEnumerable<TUTSHOP.Models.Entities.Product>

<main style="margin-bottom: 390.067px;">
    <div class="container margin_30">
        <div class="row small-gutters" id="product-container">
            @for (var i = 0; i < Model.Count(); i++)
            {
                var item = Model.ElementAt(i);
                var hideClass = i >= 12 ? "d-none" : "";
                <div class="col-6 col-md-4 col-xl-3 product-item @hideClass">
                    <div class="card product-card">
                        <div class="product-image">
                            @if (item.DiscountId > 0)
                            {
                                <span class="ribbon off">Giảm @item.DiscountId%</span>
                            }
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId">
                                <img class="card-img-top" src="@item.ImageUrl" style="object-fit: contain" alt="@item.ProductName">
                            </a>
                            <span class="badge">Trả góp 0%</span>
                        </div>
                        <div class="card-body">
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId">
                                <h5 class="card-title">@item.ProductName</h5>
                            </a>
                            <div class="price_box">
                                <span class="new_price">@item.Price.ToString("N0")đ</span>
                                <span class="old_price">@item.OldPrice.ToString("N0")đ</span>
                            </div>
                            <p class="installment-info">Không phí chuyển đổi khi trả góp 0% qua thẻ tín dụng kỳ hạn 3-6 tháng</p>
                            <div class="rating">
                                <span class="stars">★★★★☆</span>
                                <a href="#0" class="wishlist-icon"><i class="ti-heart"></i> Yêu thích</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        @if (Model.Count() > 12)
        {
            <div class="row">
                <div class="col-12 text-center mt-4">
                    <button id="loadMore" class="btn btn-primary">Xem thêm</button>
                </div>
            </div>
        }
    </div>
</main>

<style>
    .product-card {
        border: 1px solid #e1e1e1;
        border-radius: 10px;
        overflow: hidden;
        transition: all 0.3s ease;
        background-color: white;
        position: relative;
    }

        .product-card:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    .product-image {
        position: relative;
        overflow: hidden;
        width: 100%;
        height: 200px;
    }

        .product-image img {
            display: block;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .ribbon.off {
        position: absolute;
        top: 10px;
        left: 10px;
        background-color: #ff0000;
        color: white;
        padding: 5px 10px;
        font-size: 14px;
        font-weight: bold;
        border-radius: 3px;
        z-index: 10;
    }

    .badge {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: #007bff;
        color: white;
        padding: 5px 10px;
        font-size: 14px;
        font-weight: bold;
        border-radius: 3px;
        z-index: 10;
    }

    .card-body {
        padding: 15px;
    }

    .card-title {
        font-size: 15px;
        font-weight: bold;
        margin-bottom: 10px;
        color: #333;
    }

    .price_box {
        margin: 15px 0;
    }

    .new_price {
        color: #d0021b;
        font-size: 18px;
        font-weight: bold;
    }

    .old_price {
        text-decoration: line-through;
        color: #999;
        margin-left: 10px;
    }

    .installment-info {
        font-size: 14px;
        color: #333;
        margin: 10px 0;
    }

    .rating {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .stars {
        color: #f0ad4e;
        font-size: 18px;
    }

    .wishlist-icon {
        color: #ff0000;
        font-size: 18px;
        text-decoration: none;
    }

        .wishlist-icon i {
            margin-right: 5px;
        }
</style>

<script>
    document.getElementById('loadMore')?.addEventListener('click', function () {
        var hiddenItems = document.querySelectorAll('.product-item.d-none');
        var count = 0;
        hiddenItems.forEach(function (item) {
            if (count < 12) {
                item.classList.remove('d-none');
                count++;
            }
        });

        // Ẩn nút nếu không còn sản phẩm nào bị ẩn
        if (document.querySelectorAll('.product-item.d-none').length === 0) {
            document.getElementById('loadMore').style.display = 'none';
        }
    });
</script>
